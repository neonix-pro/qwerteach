.card-header.bordered
  - content_for(:title) do
    = display_resource_name(page.resource_name)
  - content_for(:search) do
    %form.search
      %span.search__icon
        = svg_tag "administrate/search.svg", "search", width: 16, height: 16
      %input.search__input{"aria-label" => "Search", :name => "search", :placeholder => "Search", :type => "text", :value => search_term}/
      %span.search__hint
        Press enter to search
  .header-block
    %h3#page-title.title= content_for(:title)
  .header-block.pull-right
    = link_to(                                         |
        "New #{page.resource_name.titleize.downcase}", |
        [:new, namespace, page.resource_name],         |
        class: "btn btn-primary",                               |
      )                                                |

.card-block
  .table-responsive
    = render "collection", collection_presenter: page, resources: resources
  = paginate resources
