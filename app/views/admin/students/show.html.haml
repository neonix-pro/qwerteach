- content_for(:title) { page.resource.full_name }
.card-header.bordered
  .header-block
    =image_tag page.resource.avatar.url(:small), class: "header-avatar rounded"
    %h3.title
      = content_for(:title)
      %small (Student)
  .header-block.pull-right
    = link_to("Edit",[:edit, namespace, page.resource], class: "btn btn-primary")
    = link_to("Suspendre", admin_user_path(page.resource), method: :delete, class: "btn btn-secondary")
    = button_to "Se connecter en tant que", admin_user_become_path(page.resource), method: :post, class: "btn btn-secondary"

.card-block
  %ul.nav.nav-tabs.nav-tabs-bordered
    %li.nav-item
      %a.nav-link.active(data-toggle="tab" data-target="#information" href="#information" aria-controls="information" role="tab" aria-expanded="true") Information
    %li.nav-item
      %a.nav-link(data-toggle="tab" data-target="#discuter" href="#discuter" aria-controls="discuter" role="tab" aria-expanded="false") Discuter
    %li.nav-item
      %a.nav-link(data-toggle="tab" data-target="#conversations" href="#conversations" aria-controls="conversations" role="tab" aria-expanded="false") Conversations

  .tab-content.tabs-bordered
    #information.tab-pane.active(aria-expanded="true")
      %table.table-min.table-striped.table-bordered
        - page.attributes.each do |attribute|
          %tr
            %td.attribute-label= attribute.name.titleize
            %td{:class => "attribute-data attribute-data--#{attribute.html_class}"}
              - if attribute.data != "" && !attribute.data.nil?
                = render_field attribute
              - else
                ="-"

    #discuter.tab-pane(aria-expanded="false")
      .card-header
        %h4.title Discuter avec #{page.resource.name}
        .header-block.actions.pull-right
          = link_to 'Inviter dans la classe virtuelle', room_invite_bbb_rooms_path(page.resource), class:'btn btn-secondary'
      .conversation-admin
        = render 'admin/shared/conversation_with_admin', conversation: @conversation_admin, recipient: student

    #conversations.tab-pane(aria-expanded="false")
      = render 'admin/shared/conversations', conversations: @conversations, user: student

-#=content_for(:javascript)
