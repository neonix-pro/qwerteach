= content_for(:title) do
  = display_resource_name(page.resource_name)

= content_for(:search) do
  = render 'search', search_term: search_term

%header.header
  %h1.header__heading#page-title= content_for(:title)


  -# if scopes.present?
  .header__actions
    - scopes.each do |key, params|
      = link_to(params.first,[namespace, :disputes, params.last], class: "button #{key}")


  .header__actions
    = link_to("New #{page.resource_name.titleize.downcase}", [:new, namespace, page.resource_name], class: 'button')

= render 'collection', collection_presenter: page, resources: resources

= paginate resources
