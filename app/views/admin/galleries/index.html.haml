%body
  - content_for(:title) do
    = display_resource_name(page.resource_name)
  - content_for(:search) do
    = render 'search', search_term: search_term
  %header.header
    %h1#page-title.header__heading= content_for(:title)
    .header__actions
      = link_to(                                         |
          "New #{page.resource_name.titleize.downcase}", |
          [:new, namespace, page.resource_name],         |
          class: "button",                               |
        )                                                |
  = render "collection", collection_presenter: page, resources: resources
  = paginate_admin resources
