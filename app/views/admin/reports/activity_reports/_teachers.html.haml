%section.section
  .card.sameheight-item
    .card-header.bordered
      .header-block
        %h4.title= title
    .card-block
      .table-responsive
        %table.table.table-striped.table-hover.table-min
          %thead
            %tr
              %th{width: 20} ID
              %th{width: 30} Avatar
              %th Name
              %th{width: 100} Earned
              %th{width: 60} Lessons
              %th{width: 50}
          %tbody
            - teachers.each do |teacher|
              %tr
                %td= teacher.id
                %td= image_tag avatar_url(teacher), class: 'cell-avatar'
                %td= teacher.name
                %td= number_to_currency(teacher.lessons_amount)
                %td= link_to('Lessons', admin_lessons_path(q: { teacher_id_eq: teacher.id, time_start_gteq: @report.start_date, time_start_lt: @report.end_date + 1.day }))
                %td= link_to 'Show', admin_teacher_path(teacher), class: 'btn btn-sm btn-primary-outline'