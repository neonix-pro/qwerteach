%section.section
  .card.sameheight-item
    .card-header.bordered
      .header-block
        %h4.title Teachers
    .card-block
      .table-responsive
        %table.table.table-striped.table-hover.table-min
          %thead
            %tr
              %th{width: 30} Avatar
              %th Name
              %th{width: 50} New
              %th{width: 50}
          %tbody
            - @teachers.each do |teacher|
              %tr
                %td= image_tag avatar_url(teacher), class: 'cell-avatar'
                %td= teacher.name
                %td
                  - if (@report.start_date..@report.end_date).include?(teacher.first_lesson_date.to_date)
                    Yes
                  - else
                    No
                %td= link_to 'Show', admin_teacher_path(teacher), class: 'btn btn-sm btn-primary-outline'