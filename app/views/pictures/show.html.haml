- model_class = @picture.class
- if can? :read, @picture
  .page-header
    %h1= t '.title', :default => model_class.model_name.human
  %dl.dl-horizontal
    %dt
      %strong
        = model_class.human_attribute_name(:description)
        \:
    %dd= @picture.description
    %dt
      %strong
        = model_class.human_attribute_name(:image)
        \:
    %dd= @picture.image
    %dt
      %strong
        = model_class.human_attribute_name(:gallery_id)
        \:
    %dd= @picture.gallery_id
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), |
    pictures_path, :class => 'btn'                           |
  - if can? :update, @picture
    = link_to t('.edit', :default => t("helpers.links.edit")), |
      edit_picture_path(@picture), :class => 'btn'             |
  - if can? :destroy, @picture
    = link_to t('.destroy', :default => t("helpers.links.destroy")),                                  |
      picture_path(@picture),                                                                         |
      :method => 'delete',                                                                            |
      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), |
      :class => 'btn btn-danger'                                                                      |
