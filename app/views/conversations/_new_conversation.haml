.mailbox-conversation{:id => "chatbox_new"}
  .conversation-reply
    = form_tag messages_path, :remote => true, method: :post do
      = hidden_field_tag 'mailbox', true
      = hidden_field_tag 'message[subject]'
      = hidden_field_tag 'message[recipient]', '', id: 'new_message_recipient'
      = text_area_tag 'message[body]', nil, cols: 3, class: 'form-control chatboxtextarea', placeholder: 'Type something...', required: true
      = submit_tag "Envoyer", class: 'btn btn-primary'
.mailbox-conversation-details
  .conversation-participants