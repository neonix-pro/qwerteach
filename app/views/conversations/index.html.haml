// le css est dans conversations.scss
.mail-box
  %aside.sm-side
    .user-head
    .inbox-body
      %a.btn.btn-compose{"data-toggle" => "modal", :href => "#myModal", :title => "Compose"}
        Nouveau
    = render partial: 'mailbox_navigation', :locals=>{mailbox_type: @mailbox_type, unread_count: @unread_count}
    = render partial: 'mailbox_contacts', :locals=>{online_buddies: @online_buddies}
  %aside.lg-side
    = render partial: 'mailbox_head', :locals=>{mailbox_type: @mailbox_type}
    = render partial: 'mailbox_options', :locals=>{conversations: @conversations}
    = render partial: 'mailbox_conversations', :locals=>{conversations: @conversations, user: @user}