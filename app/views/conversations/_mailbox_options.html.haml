.inbox-body
  .mail-option
    .chk-all
      %input.mail-checkbox.mail-group-checkbox{:type => "checkbox", "data-check"=>'all'}
        .btn-group
          %a.btn.mini.all{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#"}
            All
            %i.fa.fa-angle-down
          %ul.dropdown-menu
            %li
              %a.chk_all{:href => "#", :data=>{:check=>:none}} None
            %li
              %a.chk_all{:href => "#", :data=>{:check=>:read}} Read
            %li
              %a.chk_all{:href => "#", :data=>{:check=>:unread}} Unread
    .btn-group
      = link_to mailbox_path(mailbox_type), :class => 'inbox-nav-link btn mini', data: {boxtype: mailbox_type}, :remote => true do
        %i.fa.fa-refresh
    .btn-group.hidden-phone
      %a.btn.mini.blue{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#"}
        Action
        %i.fa.fa-angle-down
      %ul.dropdown-menu
        %li
          %a{:href => "#"}
            %i.fa.fa-pencil
            Mark as Read
        %li
          %a{:href => "#"}
            %i.fa.fa-trash-o
            Delete
    %ul.unstyled.inbox-pagination
      %li
        %span 1-#{conversations.count} of #{conversations.total_count}
      %li
        = link_to_previous_page conversations, 'prev', :class=>"np-btn"
      %li
        = link_to_next_page conversations, 'next', :class=>"np-btn"