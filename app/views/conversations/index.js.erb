$('#mailbox_conversations').html("<%= j render partial: 'mailbox_conversations',
                                       locals: {conversations: @conversations,
                                       user: @user}%>");
$('#mailbox_options').html("<%= j render partial: 'mailbox_options',
                                       locals: {conversations: @conversations,
                                       mailbox_type: @mailbox_type}%>");

$('.inbox-nav-link').each(function(el) {
  $(this).parent().removeClass('active');
  if($(this).attr('data-boxtype') == '<%= @mailbox_type %>')
  {
    $(this).parent().addClass('active');
  }
});

