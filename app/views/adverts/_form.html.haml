    .right  
      .field.level_choice_levels
      .field.group_choice
        = f.select :topic_group_id, options_for_select(TopicGroup.all.collect { |p| [p.title, p.id] }), {include_blank: "Choisissez une catÃ©gorie"}, :required => true 
      .field.topic_choice.group_choice_topic
