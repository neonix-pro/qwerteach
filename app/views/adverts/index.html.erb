<h1>Mes annonces</h1>
<div>
<%= link_to 'Créer une annonce ', new_advert_path, :class => 'btn btn-warning' %> <br/>
</div>

<% @adverts.each do |advert| %>
<div class ="col-xs-6 col-md-3 thumbnail">
    <h4><%= advert.topic.topic_group.title %></h4>
    <% if (advert.topic.title=="Autre") %>
        <p>Topic: <%= advert.other_name %></p>
    <% else %>
        <p>Topic : <%= advert.topic.title %></p>
    <% end %>
    <% prices = advert.advert_prices %>

    <% prices.each { |p| %>
        <dd><%= p.level.fr %> : <%= ActionController::Base.helpers.number_to_currency(p.price) %></dd>
    <%} %>

    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_advert_path(advert), :class => 'btn btn-success' %>

    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                advert_path(advert),
                :method => :delete,
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Êtes-vous sure ?')),
                :class => 'btn btn-mini btn-danger' %>

</div>
<% end %>
