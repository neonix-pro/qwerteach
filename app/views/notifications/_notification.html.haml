- emetteur = User.find(notification.sender_id)
.content
  .notification-item
    %h4.item-title
    .item-image= image_tag(emetteur.avatar.url(:small), class:'img img-circle')
    = notification.subject.html_safe
    -if notification.notified_object_type == 'Lesson'
      .text-right
        = link_to 'voir plus', lessons_path
    -unless notification.body.nil?
      .text-right
        = link_to 'cliquez ici', notification.body
    .item-date= notification_date notification.created_at
