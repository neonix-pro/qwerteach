<p>Bancontact</p>
<%= form_for @user, as: :user, url: wizard_path, method: :put do |f| %>
    <div class="field">
      <%= f.label "Montant" %>
      <%= hidden_field_tag "amount", @payment.price, :required => true %>
      <%= @payment.price %>
    </div>
    <div class="field">
      <%= f.label "Bénéficiaire" %>
      <%= hidden_field_tag "other_part", @payment.lesson.teacher_id, :required => true %>
      <%= @payment.lesson.teacher.email %>
    </div>
    <div class="actions">
      <%= f.submit "Confirmer" %>
    </div>
<% end %>