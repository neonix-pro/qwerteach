.card.card-search
  .card-content
    .row
      .col-xs-2.col-sm-1.text-center
        .icon-user-avatar
          = image_tag pack.teacher.avatar(:small), class: 'img-circle icon-user-avatar'
      .col-xs-6.col-sm-8.col-md-9
        .card-title
          #{link_to pack.teacher.name, user_path(pack.teacher)} vous propose un forfait de cours!
        %p
          #{pack.hours}h de #{pack.topic.title} (#{pack.topic.topic_group.title}), à #{pack.amount}€
      .col-xs-4.col-sm-3.col-md-2
        = link_to 'Voir', lesson_pack_path(pack), method: :get, class: 'btn btn-green btn-qw'
