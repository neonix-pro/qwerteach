.container-fluid
  .row
    %h2.page-title-green.text-center DÃ©finir un nouveau mot de passe
    .col-md-6.col-md-offset-3.text-center
      %p
        Introduisez ici votre nouveau mot de passe
  .row
    .col-md-4.col-md-offset-4
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        .field
          = f.label :password, "Nouveau mot de passe"
          %br/
          = f.password_field :password, autofocus: true, autocomplete: "off" , class: 'form-control', :required => true, data: { |
            :validation => "length", 'validation-length' => "min8",                                                              |
            "validation-error-msg" => "Too short." }
        .field
          = f.label :password_confirmation, "Confirmez le nouveau mot de passe"
          %br/
          = f.password_field :password_confirmation, autocomplete: "off" , class: 'form-control', :required => true, data: { :validation => "confirmation",'validation-confirm'=> 'password', "validation-error-msg" => "Not the same." }
        .actions
          = f.submit "Modifier mon mot de passe"
  .row
    .col-md-6.col-md-offset-3.text-right
      .devise-links
        =render partial: 'devise/shared/links'

