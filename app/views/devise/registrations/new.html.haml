.container-fluid
  .sign_in_page
    .row
      %h1.text-center Inscription
      .col-md-6.col-md-offset-3
        %p
          S'inscrire sur Qwerteach c'est rapide, gratuit, et garanti sans spams :)
        = render :partial => 'new_form'
        .text-right
          %small= link_to 'Déjà inscrit?', new_session_path(resource)

:javascript
  a = jstz.determine();
  $('#user_time_zone').val(a.name());
  $('.form-control').on('change', function () {
    $.validate({
      modules: 'security'
    });
  });
