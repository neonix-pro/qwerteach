.container-fluid.sign_in_page
  .row
    %h2.page-title-green.text-center S'inscrire
    .col-md-4.col-md-offset-4
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        = f.hidden_field :time_zone
        %p.lead
          S'inscrire sur Qwerteach c'est rapide, gratuit, et garanti sans spams :)
        .form-group
          = f.email_field :email, autofocus: true, class: 'form-control', :required => true, id: "user_email", placeholder: 'email'
        .form-group
          = f.password_field :password, autocomplete: "off", class: 'form-control', :required => true, placeholder: "Mot de passe (#{@minimum_password_length} caractÃ¨res)", data: { |
            :validation => "length", 'validation-length' => "min8",                                            |
            "validation-error-msg" => "Votre mot de passe est trop court."}                                                            |
        .actions
          = f.submit "S'inscrire"
  .row
    .col-md-6.col-md-offset-3
      = render "devise/shared/links"
      %hr
:javascript
  a = jstz.determine();
  $('#user_time_zone').val(a.name());
  $('.form-control').on('change', function () {
    $.validate({
      modules: 'security'
    });
  });
