<h2>Charger mon portefeuille</h2>


<%= form_for @user, as: :user, url: user_mangopay_direct_debit_path, method: :put do |f| %>
    <div class="field">
      <%= f.label "Montant" %>
      <%= number_field_tag "amount", '50', :min => 0 , :step => 0.1 %>
    </div>
    <div class="field">
      <%= f.label "Type de carte" %>
      <%= select_tag "card_type", options_for_select(["CB_VISA_MASTERCARD", "MAESTRO", "DINERS", "P24", "IDEAL", "BCMC", "MASTERPASS"], "CB_VISA_MASTERCARD") %>
    </div>
    <div class="actions">
      <%= f.submit "ok" %>
    </div>
<% end %>
