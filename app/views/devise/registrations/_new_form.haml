= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  = f.hidden_field :time_zone
  .form-group
    = f.email_field :email, autofocus: true, class: 'form-control', :required => true, id: "user_email", placeholder: 'email'
  .form-group
    = f.text_field :firstname, class: 'form-control', placeholder: 'Prénom'
  .form-group
    = f.text_field :lastname, class: 'form-control', placeholder: 'Nom'
  .form-group
    = f.password_field :password, autocomplete: "off", class: 'form-control', :required => true, placeholder: "Mot de passe (#{@minimum_password_length} caractères)", data: { |
      :validation => "length", 'validation-length' => "min8",                                            |
      "validation-error-msg" => "Votre mot de passe est trop court."}
  .actions
    = f.submit "S'inscrire"