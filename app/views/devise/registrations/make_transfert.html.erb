<%= form_for @user, as: :user, url: user_mangopay_make_transfert_path, method: :put do |f| %>
    <div class="field">
      <%= f.label "Montant" %>
      <%= number_field_tag "amount", '50', :min => 0, :step => 0.1  %>
    </div>
    <div class="field">
      <%= f.label "Bénéficiaire" %>
      <%= select_tag "other_part", options_for_select(User.all.collect { |p| [p.email, p.id] }) %>
    </div>
    <div class="actions">
      <%= f.submit "ok" %>
    </div>
<% end %>
