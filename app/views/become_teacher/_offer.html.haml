      = form_for offer, remote: true do |f|
        = hidden_field_tag :origin, 'become_teacher'
        .input-field
          = autocomplete_field_tag 'interest[topic_id]', '', autocomplete_topic_title_topics_path, :size => 75, :class => "autocomplete", placeholder: 'ex: math√©matiques', autofocus: true
        = hidden_field_tag :topic_id
        .form-gorup.topic-name
        .form-group.level_choice_levels
        .form-group
          = f.label :description
          = f.text_area :description, class:'form-control', rows: 5
        .actions
          = f.submit :enregistrer

