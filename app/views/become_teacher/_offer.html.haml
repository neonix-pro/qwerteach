.offer
  %p= offer.topic.topic_group.title
  - if (offer.topic.title=="Other")
    %p
      Topic: #{offer.other_name}
  - else
    %p
      Topic : #{offer.topic.title}
  - prices = offer.offer_prices
  - prices.each { |p|
  %dd
    = p.level.fr
    \: #{ActionController::Base.helpers.number_to_currency(p.price)}
  - }
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                  |
    offer_path(offer),                                                                            |
    :method => :delete,                                                                             |
    :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), |
    :class => 'btn btn-mini btn-danger delete-offer',                                              |
    :remote => true                                                                                 |
  %br/
