= form_tag @card_registration.card_registration_url, method: :post do
  = hidden_field_tag :amount, params[:amount]
  = hidden_field_tag :data, @card_registration.preregistration_data
  = hidden_field_tag :accessKeyRef, @card_registration.access_key
  = hidden_field_tag :returnURL, card_registration_url(:amount => params[:amount], :card_registration_id => @card_registration.id)
  .field.form-group
    = label_tag "Numero"
    = number_field_tag :cardNumber, nil, class: 'form-control', :required => true, data: {     |
          :validation => "required creditcard", 'validation-allowing' => "visa, mastercard", |
          "validation-error-msg" => "This card number is invalid."                           |
      }                                                                                      |
  / .field.form-group
  /   = label_tag "Date d'expiration"
  /   = text_field_tag :month, nil, :data => {:provide => "datepicker", 'date-format' => 'mm', 'date-view-mode' => 'months', 'date-min-view-mode' => 'months', 'date-autoclose' => true}, class: 'form-control', :required => true
  /   = text_field_tag "year", nil, :data => {:provide => "datepicker", 'date-format' => 'yy', 'date-view-mode' => 'years', 'date-min-view-mode' => 'years', 'date-autoclose' => true, 'date-start-date' => (Date.new)}, class: 'form-control', :required => true
  .field.form-group
    = label_tag "Date d'expiration"
    = text_field_tag 'cardExpirationDate'
  .field.form-group
    = label_tag "Code de sécurité"
    = password_field_tag 'cardCvx', nil, class: 'form-control', :required => true , data: { |
          :validation => "required cvv",                                                |
          "validation-error-msg" => "This code number is invalid."                      |
      }                                                                                 |
  .actions
    = submit_tag "Envoyer"
:javascript
  $('.form-control').on('change', function () {
    $.validate({
      modules: 'security'
    });
  });
