- if flash[:notice]
  .notice = flash[:notice]

.wallet_index
  .money.col-md-10
    - # user = local_assigns[:user] || current_user ==> ??
    %p
      = wallet_balance(@user.normal_wallet)
    %span
      \#{wallet_balance(@user.bonus_wallet)} de crédit bonus
  .reload.col-md-2
    - if @user.is_a?(Teacher)
      .high
        .center
          =image_tag("wallet/deload.png")
          %p Décharger
      .high
        .center
          =image_tag("wallet/reload.png")
          %p Recharger
    - else
      .center
        = link_to load_wallet_path
        =image_tag("wallet/reload.png")
        %p Recharger
  .threecol#info_bank.col-md-4
    .center
      =image_tag("wallet/info_bank.png")
      %p Information bancaires
    .triangle
  .threecol#historique.col-md-4
    .center
      =image_tag("wallet/historique.png")
      %p Historique
    .triangle
  .threecol#option.col-md-4
    .center
      =image_tag("wallet/option.png")
      %p Coordonnées
    .triangle

  #option_info_bank.block_info
    .line
      .cont
        .v-center.title
          %p Moyens de payements
      .cont
        .v-center.tile
          %p Carte 1
      .cont
        .v-center.tile
          %p Carte 2
      .cont
        .v-center.tile#plus
          .center
            =image_tag("wallet/plus.png")
            %p Ajouter un moyen de paiement
    .line
      .cont
        .v-center.title
          %p Moyens de payements
      .cont
        .v-center.tile#plus
          .center
            =image_tag("wallet/plus.png")
            %p Préférences de versement
  #option_historique.block_info
    %table
      %tr
        %th.dark Date
        %th Type
        %th.dark Auteur
        %th Utilisateur crédité
        %th.dark Montant crédité
        %th Montant débité
        %th.dark Frais
      %tr
        %td 18/10/1970
        %td A
        %td Auteur
        %td Moi
        %td Trop
        %td Beaucoup trop
        %td Enormément trop
      %tr
        %td 18/10/1970
        %td A
        %td Auteur
        %td Moi
        %td Trop
        %td Beaucoup trop
        %td Enormément trop
      %tr
        %td 18/10/1970
        %td A
        %td Auteur
        %td Moi
        %td Trop
        %td Beaucoup trop
        %td Enormément trop
  #option_option.block_info
    = render 'mangopay_form', :path => @path
