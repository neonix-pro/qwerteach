%div.load-wallet
  %h2.page-title-green.text-center Récupérer le solde de mon portefeuille
  .row
    .col-sm-2
    .col-sm-8
      %p
        Montant à transférer :
        = wallet_balance @user.normal_wallet
      = form_tag make_payout_path, method: :put do |f|
        .form-group
          = label_tag :account, 'Compte en banque à créditer'
          = select_tag :account, options_for_select(@user.bank_accounts.collect{|ba| [ba.iban, ba.id]}), :required => true, class: 'form-control'
        .form-group.actions
          = link_to 'retour', index_wallet_path
          = submit_tag 'Confirmer', :class => 'btn btn-primary btn-mini'