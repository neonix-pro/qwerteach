= label_tag 'Pour quels niveaux enseignez vous cette matière?'
- if @levels.nil?
  %p Aucun niveau disponible pour cette catégorie
- else
  - @levels.each do |c|

    - if @offer.offer_prices.map(&:level_id).include?(c.id)
      - a = @offer.offer_prices.find_by(level_id: c.id)
      .row.level-row
        .col-sm-8
          = hidden_field_tag "offer[offer_prices_attributes][][id]", a.id
          = hidden_field_tag "offer[offer_prices_attributes][][_destroy]", false, id: "destroy_#{c.id}"
          = check_box_tag "offer[offer_prices_attributes][][level_id]", c.id, 'checked', class: 'price_box'
          = label_tag c[I18n.locale[0..3]]
        .col-sm-4
          = number_field_tag "offer[offer_prices_attributes][][price]", nil, id: c.id, min: 0, disabled: false, value: @offer.offer_prices.detect{|lp| lp.level_id == c.id}.price, class: 'form-control'
    - else
      .row.level-row
        .col-sm-8
          = check_box_tag 'offer[offer_prices_attributes][][level_id]', c.id, nil, class: 'price_box'
          = label_tag c[I18n.locale[0..3]]
        .col-sm-4
          = number_field_tag 'offer[offer_prices_attributes][][price]', nil, id: c.id, min: 0, disabled: true, placeholder: "...€/h", class: 'form-control'

:javascript
  $('.price_box').on('click', function () {
    var a = $(this).val();
    if ($('#'+a+'').attr('disabled')) {
      $('#'+a+'').removeAttr('disabled');
      $('#'+a+'').attr({
        'required': 'required'
      });
      $('#destroy_'+a).val(false);
    }
    else {
      $('#'+a+'').attr({
        'disabled': 'disabled'
      });
      $('#'+a+'').removeAttr('required');
      $('#destroy_'+a).val(true);
    }
  });
