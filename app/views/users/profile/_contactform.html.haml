#contact-modal.modal.fade{role: 'dialog', tabindex:'-1'}
  .modal-dialog{role:'document'}
    .modal-content
      = form_tag messages_path, method: :post, remote: true do
        .modal-header
          %button.close{type:'button', data:{dismiss: 'modal'}}
            %span &times
          %h4 Envoyer un message à #{user.name}
        .modal-body
          = hidden_field_tag 'message[subject]', "#{me.name} vous pose une question!"
          = hidden_field_tag 'message[recipient]', user.id
          .form-group
            = text_area_tag 'message[body]', nil, rows: 5,
              placeholder: "Posez une question à #{user.firstname}", class: 'form-control', required: true
          = submit_tag 'Envoyer', class: 'btn btn-send-message btn-small'
