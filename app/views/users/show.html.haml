%div
  #sidebar-profile
    #user-profilepicture
      = image_tag(@user.avatar.url(:medium), size: "250x250")
    - if @user.is_a?(Teacher)
      .user-pricing
        .minprice
          = "%g€/h" % (@user.min_price)
        %a{"data-toggle" => "modal", :href => "#detailed-pricing"} voir le tarif détaillé
      = link_to 'Réserver un cours', new_user_lesson_request_path(@user),
        class: "btn btn-green", remote: false
    #user-contactform
      = render partial: 'users/profile/contactform', locals:{me: @me, user: @user} if current_user
  #profile-content
    .profile-header
      =render partial: 'users/profile/profile_header', locals:{user: @user}
    .profile-description
      #{@user.description.gsub(/\n/, '<br />').html_safe unless @user.description.nil?}
    - if @user.is_a?(Teacher)
      #profile-offers
        =render partial: 'users/profile/profile_offers', locals:{offers: @offers, offers_single: @offers_single}
      #profile-calendar
      - unless @reviews.empty?
        #profile-reviews
          = render partial: 'users/profile/profile_reviews', locals:{reviews: @reviews}
      .similar-teachers
      .clearfix
  - if @user.is_a?(Teacher)
    = render partial: 'lesson_requests/detailed_pricing_modal', locals:{offers: @user.offers_by_level_code}

    :javascript
      new RequestLesson( $('#request-lesson'), {teacher_id: #{@user.id}} );
