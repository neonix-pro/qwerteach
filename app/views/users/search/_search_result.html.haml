.result
  .result-wrapper
    .result-picture
      = image_tag(u.avatar.url(:medium))
    - if u.online?
      %span.online
        en ligne
      .result-online
    - if u.is_a?(Teacher)
      .user-price
        #{"%g" % (u.min_price)}â‚¬/h
    .result-infos
      .user-name
        #{u.name}
      .user-rating
        = #render partial: "shared/star_rating", locals: {note: u.avg_reviews}
        %span.number-of-reviews
          #{u.reviews_received.count}
          %i.fa.fa-user
      .user-topics
        #{u.adverts.map{|ad| "#{link_to ad.title, profs_by_topic_path(ad.title)}"}.first(5).join(", ").html_safe}
        - if u.adverts.count > 5
          = link_to '...', user_path(u)
      %p.user-description-excerpt
        = sanitize(u.description, tags: %w(a p)).truncate_words(25).html_safe
    .result-footer
      - unless u.featured_review.nil?
        .footer-review
          .review-picture
            = image_tag(u.featured_review.sender.avatar.url(:small))
          .review-text
            #{simple_format(u.featured_review.review_text)}
      - else
        - if u.first_lesson_free
          .footer-free-lesson
            %i.fa.fa-gift.fa-2x
            Premier cours gratuit!