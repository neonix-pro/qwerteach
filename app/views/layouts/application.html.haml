= render "layouts/header"
.container
  #flash-messages
    - flash.each do |key, value|
      %div{:class => "alert alert-#{key}"}
        = value
        = yield :top_content
.container-fluid.main-content
  = yield
- if (current_user)
  = subscribe_to "/chat"
  = subscribe_to "/notifications/"+current_user.id.to_s
= render "layouts/footer"