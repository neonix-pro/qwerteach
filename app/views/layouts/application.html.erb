<!DOCTYPE html>
<html>
<head>

  <meta content='<%= user_signed_in? ? current_user.id : "" %>' name='user-id'/>
  <title>Qwerteach</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


  <%= yield(:head) %>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'qwerteach', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Home', root_path %></li>
        <% if user_signed_in? %>
            <% @gallery=Gallery.where(:user => current_user).last %>
            <li><%= link_to 'Gallery', gallery_path(@gallery) %></li>
            <li><%= link_to 'Advert', adverts_path %></li>
            <li><%= link_to 'Rechercher un prof', users_path %></li>
            <% if current_user.admin? %>
                <li><%= link_to 'Administration', admin_root_path %></li>
      <% end %>
        <% end %>
      </ul>

      <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
            <li class="round-image-50"><%= image_tag(current_user.avatar.url(:small)) %></li>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= current_user.email %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Profile', edit_user_registration_path %></li>
                <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to 'Log In', new_user_session_path %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
  <% end %>
</div>

<%= yield :top_content %>

<div class="container">
  <h1><%= yield :header %></h1>
  <%= yield %>
</div>

<%= subscribe_to "/notifications" %>
<script>
  PrivatePub.subscribe("/notifications", function (data, channel) {
    var current_user_id = '#{current_user.try(:id)}';
    if (data.receiver_id == current_user_id) {
      chatBox.chatWith(data.conversation_id);
    }
    else {
      chatBox.chatWith(data.conversation_id);
    }
  });
</script>


</body>
</html>
