#navbar.nav.navbar.main-nav
  .color
    .container-fluid
      .navbar-header
        %button.navbar-toggle{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        = link_to (Rails.env.development? ? "QWERTEACH DEV" : image_tag("logotext.png")), root_path, class: 'navbar-brand'
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        - if user_signed_in?
          - if controller_name == 'onboarding'
            = render partial: 'layouts/navbar_onboarding'
          -else
            = render partial: 'layouts/navbar_signed_in'
        - else
          = render partial: 'layouts/navbar_signed_out'