!!!
%html{lang: I18n.locale}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "NOODP", :name => "ROBOTS"}/
    %meta{:content => "initial-scale=1", :name => "viewport"}/
    %title
      = content_for(:title)
      \- #{Rails.application.class.parent_name.titlecase}
    = stylesheet_link_tag 'administrate', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'administrate', 'data-turbolinks-track': 'reload'
    = csrf_meta_tags
  %body{class: content_for(:body_class)}
    .flash= render 'flashes'
    .main-wrapper
      .app#app
        = render 'header'
        %aside.sidebar
          .sidebar-container
            .sidebar-header
              .brand
                .logo
                  %span.l.l1
                  %span.l.l2
                  %span.l.l3
                  %span.l.l4
                  %span.l.l5
                = Rails.application.class.parent_name.titlecase
            = render 'navigation'
        .sidebar-overlay#sidebar-overlay
        %article.content.dashboard-page
          %section.section
            .row
              .col.col-xs-12
                .card
                  = yield
    = content_for :javascript