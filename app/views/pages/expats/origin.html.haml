:javascript
  $('.matiere').click(function(){
    $('.section_profs').html('<div class="spinner"><i class="fa fa-spinner fa-spin"></i></div>');
    $('.matiere').removeClass('active');
    $(this).addClass('active');
  });
  $('.see-more-link').click(function(e){
    e.preventDefault();
    $('html, body').animate({
        scrollTop: $( $.attr(this, 'href') ).offset().top
    }, 500);
  });
