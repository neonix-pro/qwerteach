.card-header.bordered
  .header-block
    %h3.title Listing #{BigbluebuttonServer.model_name.human}:
  #bbbrails_servers_links.header-block.pull-right
    = link_to('New server', new_admin_bigbluebutton_server_path, class: "btn btn-primary")

.card-block
  %ul#bbbrails_list
    - @servers.each do |server|
      %li
        %div
          %label= BigbluebuttonServer.human_attribute_name(:id)
          = server.id
        %div
          %label= BigbluebuttonServer.human_attribute_name(:name)
          = server.name
        %div
          %label= BigbluebuttonServer.human_attribute_name(:url)
          = server.url
        %div
          %label= BigbluebuttonServer.human_attribute_name(:secret)
          = server.secret
        %div
          %label= BigbluebuttonServer.human_attribute_name(:version)
          = server.version
        %div
          %label= BigbluebuttonServer.human_attribute_name(:param)
          = server.param
        %div
          %label Access
          = link_to 'Show', admin_bigbluebutton_server_path(server)
          |
          \#{link_to 'Edit', edit_admin_bigbluebutton_server_path(server)} |
          \#{link_to 'Destroy',  admin_bigbluebutton_server_path(server), :confirm => 'Are you sure?', :method => :delete}
