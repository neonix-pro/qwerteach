.left
  .form-group
    = f.label :first_name, 'First Name'
    = f.text_field :first_name, :required => true, class: 'form-control'
  .form-group
    = f.label :last_name, 'Last Name'
    = f.text_field :last_name, :required => true, class: 'form-control'
  .form-group
    = f.label :street
    = f.text_field :address_line1, :required => true, class: 'form-control'
  .form-group
    = f.label :number
    = f.text_field :address_line2, :required => true, class: 'form-control'
  .form-group
    = f.label :country
    = f.select :country, options_for_select(countries_list, :selected => @account.country) , {}, :required => true, class: 'form-control'
.right
  .form-group
    = f.label :post_code
    = f.number_field :postal_code, :required => true, class: 'form-control'
  .form-group
    = f.label :city
    = f.text_field :city, :required => true, class: 'form-control'
  .form-group
    = f.label :region
    = f.text_field :region, :required => true, class: 'form-control'
  .form-group
    = f.label :country_of_residence
    = f.select :country_of_residence, options_for_select(countries_list, :selected => @account.country_of_residence), {}, :required => true, class: 'form-control'
  .form-group
    = f.label :nationality
    = f.select :nationality, options_for_select(countries_list, :selected => @user.nationality), {}, :required => true, class: 'form-control'
