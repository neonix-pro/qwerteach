= fields_for :iban_account do |bank_account_fields|
  .field
    = bank_account_fields.label :IBAN
    %br/
    = bank_account_fields.text_field :IBAN, :value => bank_account['IBAN'], :require => true
  .field
    = bank_account_fields.label :BIC
    %br/
    = bank_account_fields.text_field :BIC, :value => bank_account['BIC'],:require => true
  = bank_account_fields.hidden_field :Type, :value => bank_account['Type']
