= fields_for :gb_account do |bank_account_fields|
  .field
    = bank_account_fields.label :Number
    %br/
    = bank_account_fields.number_field :AccountNumber, :value => bank_account['AccountNumber'],:require => true
  .field
    = bank_account_fields.label :SortCode
    %br/
    = bank_account_fields.number_field :SortCode, :value => bank_account['SortCode'],:require => true
  = bank_account_fields.hidden_field :Type, :value => bank_account['Type']
